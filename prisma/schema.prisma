// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  name      String?
  email     String? @unique
  lastLogin String?

  @@map(name: "users")
}

model Collection {
  id              String           @id @unique
  name            String?
  description     String?
  owner           String
  collectionItems CollectionItem[]
  views           Int              @default(0)

  @@map(name: "collections")
}

model CollectionItem {
  id          Int     @id @default(autoincrement())
  value       String
  description String?

  Collection   Collection? @relation(fields: [collectionId], references: [id])
  collectionId String?
  @@map(name: "collectionItems")
}
